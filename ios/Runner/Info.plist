<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- アプリ基本情報 -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>DotAnimeCam</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>DotAnimeCam</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleSignature</key>
    <string>????</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    
    <!-- 最小デプロイメントターゲット -->
    <key>LSRequiresIPhoneOS</key>
    <true/>
    
    <!-- 対応デバイス -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
    </array>
    
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- ステータスバー設定 -->
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleDefault</string>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <false/>
    
    <!-- 権限リクエスト -->
    <key>NSCameraUsageDescription</key>
    <string>このアプリは写真を撮影してドット絵に変換するためにカメラを使用します。</string>
    
    <key>NSMicrophoneUsageDescription</key>
    <string>このアプリは動画撮影機能でマイクを使用します。</string>
    
    <key>NSPhotoLibraryUsageDescription</key>
    <string>このアプリは作成したドット絵を写真ライブラリに保存するために使用します。</string>
    
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>このアプリは作成したドット絵を写真ライブラリに保存するために使用します。</string>
    
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>このアプリは写真の位置情報を記録するために使用します。</string>
    
    <!-- App Tracking Transparency -->
    <key>NSUserTrackingUsageDescription</key>
    <string>このアプリは広告をパーソナライズするために使用します。</string>
    
    <!-- ファイル共有設定 -->
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
    <key>UISupportsDocumentBrowser</key>
    <true/>
    
    <!-- UTI設定 -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>JPEG Image</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.jpeg</string>
            </array>
        </dict>
        <dict>
            <key>CFBundleTypeName</key>
            <string>PNG Image</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.png</string>
            </array>
        </dict>
        <dict>
            <key>CFBundleTypeName</key>
            <string>GIF Image</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.compuserve.gif</string>
            </array>
        </dict>
    </array>
    
    <!-- URL スキーム -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.dotanimecam.app</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>dotanimecam</string>
            </array>
        </dict>
    </array>
    
    <!-- バックグラウンドモード -->
    <key>UIBackgroundModes</key>
    <array>
        <string>background-processing</string>
    </array>
    
    <!-- 必要な機能 -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
        <string>camera-flash</string>
        <string>still-camera</string>
    </array>
    
    <!-- Launch Screen -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    
    <!-- Main Storyboard -->
    <key>UIMainStoryboardFile</key>
    <string>Main</string>
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>googleads.g.doubleclick.net</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
            <key>googlesyndication.com</key>
            <dict>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
            </dict>
        </dict>
    </dict>
    
    <!-- Google Mobile Ads -->
    <key>GADApplicationIdentifier</key>
    <string>ca-app-pub-3940256099942544~1458002511</string>
    
    <!-- Firebase設定 -->
    <key>FirebaseAppDelegateProxyEnabled</key>
    <false/>
    
    <!-- アプリケーション設定 -->
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    
    <!-- Scene設定 -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>SceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>
    
    <!-- iTunes設定 -->
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>
    
    <!-- 追加設定 -->
    <key>UIRequiresFullScreen</key>
    <true/>
    
    <key>UIFileSharingEnabled</key>
    <false/>
    
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.photography</string>
    
    <!-- パフォーマンス設定 -->
    <key>UIApplicationExitsOnSuspend</key>
    <false/>
    
    <key>UIPrerenderedIcon</key>
    <false/>
    
    <!-- 通知設定 -->
    <key>UIUserNotificationSettings</key>
    <dict>
        <key>UIUserNotificationTypeAlert</key>
        <true/>
        <key>UIUserNotificationTypeBadge</key>
        <true/>
        <key>UIUserNotificationTypeSound</key>
        <true/>
    </dict>
</dict>
</plist>